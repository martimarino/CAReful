<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtrip.NewTripFragment">

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Select the sensors you want to activate and start your trip!"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="72dp"
        android:layout_height="88dp"
        android:src="@drawable/telephone"
        app:layout_constraintBottom_toTopOf="@+id/gps"
        app:layout_constraintEnd_toStartOf="@+id/camera"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <ImageView
        android:id="@+id/gps"
        android:layout_width="70dp"
        android:layout_height="87dp"
        android:src="@drawable/localization"
        app:layout_constraintBottom_toTopOf="@+id/microphone"
        app:layout_constraintEnd_toStartOf="@+id/gyroscope"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

    <ImageView
        android:id="@+id/accelerometer"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:src="@drawable/shuttle"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/microphone"
        app:layout_constraintTop_toBottomOf="@+id/gyroscope" />

    <ImageView
        android:id="@+id/microphone"
        android:layout_width="72dp"
        android:layout_height="81dp"
        android:src="@drawable/voice"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toStartOf="@+id/accelerometer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps" />

    <ImageView
        android:id="@+id/gyroscope"
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:src="@drawable/move"
        app:layout_constraintBottom_toTopOf="@+id/accelerometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gps"
        app:layout_constraintTop_toBottomOf="@+id/camera" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="76dp"
        android:layout_height="88dp"
        android:src="@drawable/photo"
        app:layout_constraintBottom_toTopOf="@+id/gyroscope"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <Button
        android:id="@+id/start"
        android:layout_width="189dp"
        android:layout_height="88dp"
        android:layout_marginBottom="84dp"
        android:text="@string/title_newtrip"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>